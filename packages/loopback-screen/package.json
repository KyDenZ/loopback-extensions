{
  "name": "@shrinedev/loopback-screen",
  "version": "0.0.2",
  "description": "A LoopBack component for filtering incoming http requests",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "lb-tsc es2017 --outDir dist",
    "clean": "lb-clean loopback-screen*.tgz dist package api-docs",
    "integration": "lb-mocha \"dist/__tests__/integration/**/*.js\"",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/unit/**/*.js\" \"dist/__tests__/integration/**/*.js\" \"dist/__tests__/acceptance/**/*.js\"",
    "unit": "lb-mocha \"dist/__tests__/unit/**/*.js\"",
    "verify": "npm pack && tar xf loopback-screen*.tgz && tree package && npm run clean"
  },
  "keywords": [
    "LoopBack",
    "filter",
    "screens",
    "controller"
  ],
  "author": "Shrine Development",
  "copyright.owner": "Shrine Development",
  "homepage": "http://www.shrinedev.com",
  "license": "MIT",
  "dependencies": {
    "@loopback/context": "1.6.0",
    "@loopback/core": "1.1.7",
    "@loopback/metadata": "1.0.7",
    "@loopback/openapi-v3": "1.2.2",
    "@loopback/rest": "1.7.0"
  },
  "devDependencies": {
    "@loopback/build": "1.3.1",
    "@loopback/testlab": "1.0.7",
    "@loopback/tslint-config": "2.0.1",
    "@types/node": "10.11.2"
  },
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/shrinedev/loopback.git"
  },
  "bugs": {
    "url": "https://github.com/shrinedev/loopback/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
